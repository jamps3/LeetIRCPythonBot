# Sample .env file for LeetIRCPythonBot. Copy this file to .env and fill in the required values.
# API Keys
# Replace these placeholders with your actual API keys
WEATHER_API_KEY = "your_openweathermap_api_key_here"
WEATHER_FORECAST_API_KEY = "your_meteosource_api_key_here"
ELECTRICITY_API_KEY = "your_electricity_api_key_here"
OPENAI_API_KEY = "your_openai_api_key_here"
YOUTUBE_API_KEY = "your_youtube_api_key_here"
EUROJACKPOT_API_KEY = "your_eurojackpot_api_key_here"
X_BEARER_TOKEN = "your_x_bearer_token_here"

# Bot Configuration Settings (moved from main.py)
BOT_NAME=LeetIRCBot
LOG_LEVEL=INFO
HISTORY_FILE=conversation_history.json
EKAVIKA_FILE=ekavika.json
WORDS_FILE=general_words.json
OTIEDOTE_FILE=otiedote.json
STATE_FILE=state.json
RECONNECT_DELAY=60
QUIT_MESSAGE=üç∫ N√§hd√§√§n! üç∫
ADMIN_PASSWORD=abc123xy

# TUI Configuration
# LOG_BUFFER_SIZE=1000    # Maximum number of log entries to keep in memory (default: 1000)
LOG_BUFFER_SIZE=1000
# AUTO_CONNECT=true       # Automatically connect to servers on startup (default: true)
# AUTO_CONNECT=false      # Wait for manual connection
AUTO_CONNECT=true

# Message Output Settings
# USE_NOTICES=true   # Send all channel responses as IRC NOTICEs instead of regular messages
# USE_NOTICES=false  # Send channel responses as regular PRIVMSG
USE_NOTICES=true

# Tamagotchi Settings
# TAMAGOTCHI_ENABLED=true   # Enable tamagotchi responses to trigger words
# TAMAGOTCHI_ENABLED=false  # Disable tamagotchi responses (can be toggled with !tamagotchi command)
TAMAGOTCHI_ENABLED=false

# Ops Command Settings
# Channels where the !ops command is allowed (gives +o to all users)
# Leave empty to allow !ops in all channels, or specify comma-separated channel list
# Example: OPS_ALLOWED_CHANNELS=#admin,#moderators,#special
OPS_ALLOWED_CHANNELS=

# Title Fetching Blacklist Settings
# URLs containing these domains will be skipped for title fetching
# Separate multiple domains with commas (no spaces)
TITLE_BLACKLIST_DOMAINS=youtube.com,youtu.be,facebook.com,fb.com,x.com,twitter.com,instagram.com,tiktok.com,discord.com,reddit.com,imgur.com

# File extensions that will be skipped for title fetching
# Separate multiple extensions with commas (no spaces)
TITLE_BLACKLIST_EXTENSIONS=.jpg,.jpeg,.png,.gif,.mp4,.webm,.pdf,.zip,.rar,.mp3,.wav,.flac

# Banned title texts that will be skipped for title fetching
# Separate multiple titles with semicolons (case-insensitive matching)
TITLE_BANNED_TEXTS=Bevor Sie zu Google Maps weitergehen;Just a moment...;403 Forbidden;404 Not Found;Access Denied

# GPT Service Settings
# OPENAI_MODEL selects the model for the Responses API (e.g., gpt-5, gpt-5-mini)
OPENAI_MODEL=gpt-5-mini
# GPT_HISTORY_LIMIT=100  # Maximum number of messages to keep in conversation history (default: 100)
GPT_HISTORY_LIMIT=100

# Quote Command Settings
# QUOTES_SOURCE can be a local file path or URL
# Examples: quotes.txt, /path/to/quotes.txt, https://example.com/quotes.txt
QUOTES_SOURCE=quotes.txt


# Server Configurations
# Format: SERVERx_HOST, SERVERx_PORT, SERVERx_CHANNELS, SERVERx_KEYS
# Where x is a unique identifier for each server

# Server 1
SERVER1_HOST=irc.atw-inter.net
SERVER1_PORT=6697
SERVER1_CHANNELS=#LeetIRCPythonBot
SERVER1_KEYS=
SERVER1_TLS=true
SERVER1_ALLOW_INSECURE_TLS=true

